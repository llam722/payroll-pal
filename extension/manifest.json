{
  "name": "Payroll Pal",
  "version": "1.0",
  "description": "Hourly Calculator for Payroll",
  "manifest_version": 3,
  "author": "Louis Lam",
  "action": {
    "default_popup": "index.html",
    "default_title": "Payroll Pal",
    "default_icon" : "../src/assets/payroll-icon.png",
    "background": {
      "permissions": ["activeTab", "scripting"],
      "page": "index.html",
      "service_worker": ["src/background.js", "src/main.js", "src/script.js", "src/createPokemon.js"],
      "content_scripts": [
        {
          "matches": [ "<all_urls>" ],
          "css": ["src/style.css"]
        }
      ]
    },
    "user_scripts": {
      "api_script": ["src/main.js", "src/background.js", "src/script.js", "src/createPokemon.js"]
    }
    }
}